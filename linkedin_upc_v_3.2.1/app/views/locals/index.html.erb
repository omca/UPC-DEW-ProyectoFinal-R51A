<h1>Listing locals</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>District</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th>Phone</th>
    <th>Gmaps</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locals.each do |local| %>
  <tr>
    <td><%= local.name %></td>
    <td><%= local.address %></td>
    <td><%= local.district.name %></td>
    <td><%= local.longitude %></td>
    <td><%= local.latitude %></td>
    <td><%= local.phone %></td>
    <td><%= local.gmaps %></td>
    <td><%= link_to 'Show', local %></td>
    <td><%= link_to 'Edit', edit_local_path(local) %></td>
    <td><%= link_to 'Destroy', local, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

