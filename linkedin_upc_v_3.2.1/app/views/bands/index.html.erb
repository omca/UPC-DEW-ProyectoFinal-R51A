<% contador = 1 %>

<h1>Registro de Grupos de Musica</h1>

<table id="myTable" class="tablesorter" cellspacing="1" cellpadding="0" border="0">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Estilo de musica</th>
      <th colspan=3>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
    <% contador+=1; %>
      <% if contador % 2 != 0 %> 
        <% @clase = "fila_par detalle"  %>
      <% else %>
        <% @clase = "fila_impar detalle"  %>
      <% end %>

     <tr class="<%= @clase %>" >

        <td><%= band.name %></td>

    <td><%= band.style.name %></td>
    <td>
      <%= link_to band do %>
        <%= image_tag('/assets/search.png') %>
      <% end %>
    </td>
    
    <td>
      <%= link_to edit_band_path(band) do %>
        <%= image_tag('/assets/editar.png') %>
      <% end %>
    <td>
      <%= link_to band, method: :delete, data: { confirm: 'Â¿Estas Seguro de Eliminar?' } do %>
        <%= image_tag('/assets/eliminar.png') %>
      <% end %>
    </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  
<%= link_to 'Nuevo Grupo', new_band_path %>