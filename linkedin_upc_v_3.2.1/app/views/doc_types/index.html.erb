<% contador = 1 %>
<div id="title">
  <div id="texto">LISTA DE TIPO DE DOCUMENTOS</div>
  <div id="opciones">
    <%= link_to new_doc_type_path, :class => "link_img", :title => "Nuevo Tipo de Documento" do %>
      <%= image_tag('/assets/agregar.png') %>
    <% end %>
  </div>
</div>


<% if @doc_types.empty? %>
  <div id="msje_no_filas">No existen tipos de documentos registrados en el Sistema.</div>
<% else %>
<table id="myTable" class="tablesorter" width=800 cellspacing="1" cellpadding="0" border="0">
  <thead>
    <tr>
      <th width=550>Tipos de Documentos</th>
      <th colspan=3>Opciones</th>
    </tr>
  </thead>
  <tbody>

    <% @doc_types.each do |doc_type| %>
        <% contador+=1; %>
        <% if contador % 2 != 0 %> 
          <% @clase = "fila_par detalle"  %>
        <% else %>
          <% @clase = "fila_impar detalle"  %>
        <% end %>
        <tr class="<%= @clase %>">
          <td><%= doc_type.name %></td>

          <td>
            <%= link_to doc_type do %>
              <%= image_tag('/assets/search.png') %>
            <% end %>
          </td>
          <td>
            <%= link_to edit_doc_type_path(doc_type) do %>
              <%= image_tag('/assets/editar.png') %>
            <% end %>
          <td>
            <%= link_to doc_type, method: :delete, data: { confirm: 'Â¿Estas Seguro de Eliminar?' } do %>
              <%= image_tag('/assets/eliminar.png') %>
            <% end %>
          </td>

        </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br />