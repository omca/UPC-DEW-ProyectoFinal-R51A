<% contador = 1 %>
<div id="title">
  <div id="texto">LISTA DE DISTRITOS</div>
  <div id="opciones">
    <%= link_to new_district_path, :class => "link_img", :title => "Nuevo Distrito" do %>
      <%= image_tag('/assets/agregar.png') %>
    <% end %>
  </div>
</div>

<% if @districts.empty? %>
  <div id="msje_no_filas">No existen distritos registrados en el Sistema.</div>
<% else %>
<table id="myTable" class="tablesorter" width=800 cellspacing="1" cellpadding="0" border="0">
  <thead>
    <tr>
      <th width=550>Distritos</th>
      <th colspan=3>Opciones</th>
    </tr>
  </thead>
  <tbody>
      <% @districts.each do |district| %>
          <% contador+=1; %>
          <% if contador % 2 != 0 %> 
            <% @clase = "fila_par detalle"  %>
          <% else %>
            <% @clase = "fila_impar detalle"  %>
          <% end %>
          <tr class="<%= @clase %>">
            <td><%= district.name %></td>
            <td>
              <%= link_to district do %>
                <%= image_tag('/assets/search.png') %>
              <% end %>
            </td>
            <td>
              <%= link_to edit_district_path(district) do %>
                <%= image_tag('/assets/editar.png') %>
              <% end %>
            <td>
              <%= link_to district, method: :delete, data: { confirm: 'Â¿Estas Seguro de Eliminar?' } do %>
                <%= image_tag('/assets/eliminar.png') %>
              <% end %>
            </td>
          </tr>
      <% end %>
    </tbody>
  </table>
<% end %>