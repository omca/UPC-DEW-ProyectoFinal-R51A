<% contador = 1 %>

<div id="title">
  <div id="texto">LISTAR USUARIOS</div>
  <div id="opciones">
    <%= link_to new_user_path, :class => "link_img", :title => "Nuevo Usuario" do %>
      <%= image_tag('/assets/agregar.png') %>
    <% end %>
  </div>
</div>

<% if @users.empty? %>
  <div id="msje_no_filas">No existen usuarios registrados en el Sistema.</div>
<% else %>
  <table id="myTable" class="tablesorter" cellspacing="1" cellpadding="0" border="0">
    <thead>
      <tr>
        
        <th>User type </th>
        <th>Name</th>
        <th>Last name</th>
        <th>Surname</th>
        <th>User name</th>
        <th>Mail</th>
        <th>Password</th>
        <th colspan=3>Opciones</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <% contador+=1; %>
        <% if contador % 2 != 0 %> 
          <% @clase = "fila_par detalle"  %>
        <% else %>
          <% @clase = "fila_impar detalle"  %>
        <% end %>
      
        <tr class="<%= @clase %>" >
          
          <td><%= user.user_type.name %></td>
          <td><%= user.name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.surname %></td>
          <td><%= user.user_name %></td>
          <td><%= user.mail %></td>
          <td><%= user.password %></td>
          <td>
            <%= link_to user do %>
              <%= image_tag('/assets/search.png') %>
            <% end %>
          </td>

          <td>
            <%= link_to edit_user_path(user) do %>
              <%= image_tag('/assets/editar.png') %>
            <% end %>
          <td>
            <%= link_to user, method: :delete, data: { confirm: 'Â¿Estas Seguro de Eliminar?' } do %>
              <%= image_tag('/assets/eliminar.png') %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>


